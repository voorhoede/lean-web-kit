{
  "name": "lean-web-kit",
  "private": true,
  "version": "1.0.0",
  "description": "Lean Web Kit to kick-start your web project.",
  "author": "De Voorhoede (https://www.voorhoede.nl)",
  "homepage": "https://github.com/voorhoede/lean-web-kit#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/voorhoede/lean-web-kit"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=5"
  },
  "browserslist": [
    "last 2 versions",
    "ie 11"
  ],
  "scripts": {
    "analyze": "echo \"not supported by eleventy\"",
    "prebuild": "touch ./.env && rimraf dist/ && npm run data",
    "build": "NODE_ENV=production run-s build:*",
    "build:html": "eleventy",
    "build:css": "postcss src/client/assets/*.css --dir dist/client/",
    "build:server": "netlify-lambda build src/server/functions/",
    "predata": "rimraf src/client/data/ src/client/_redirects",
    "data": "dato dump",
    "predev": "rimraf dist/ && npm run data && npm run build:css",
    "dev": "run-p dev:*",
    "dev:html": "eleventy --serve --port=5326",
    "dev:css": "postcss src/client/assets/*.css --dir dist/client/ --watch",
    "dev:server": "netlify-lambda serve src/server/functions/",
    "debug": "run-s debug:*",
    "debug:html": "DEBUG=Eleventy* eleventy",
    "debug:css": "postcss src/client/assets/*.css --dir dist/client/ --verbose ",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "start": "run-p dev:server start:dist",
    "start:dist": "http-server './dist/client/' -c-1 -o -p 5326 --proxy 'http://localhost:9000/'"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "dotenv-safe": "^6.0.0",
    "normalize.css": "^8.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.7.1",
    "ajv": "^6.5.1",
    "autoprefixer": "^9.4.10",
    "cheerio": "^1.0.0-rc.2",
    "cssnano": "^4.1.10",
    "eslint": "^5.12.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "http-server": "^0.11.1",
    "lodash": "^4.17.10",
    "lorem-ipsum": "^1.0.5",
    "netlify-lambda": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.1.2",
    "postcss-custom-properties": "^8.0.9",
    "postcss-import": "^12.0.1",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2",
    "slugify": "^1.3.0",
    "voorhoede-datocms-client": "0.5.2"
  }
}
